<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 align-self-center">
                <h4 class="text-themecolor"></h4>
            </div>
            <div class="col-md-7 align-self-center text-right">
                <div class="d-flex justify-content-end align-items-center">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Product</a></li>                                
                        <li class="breadcrumb-item active">Fail</li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="row">   
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Products Fail</h4>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Product Name</th>
                                        <th>Image</th>
                                        <th>Seller Name</th>
                                        <th>Price Start</th>
                                        <th>Price End</th>
                                        <th>Step</th>
                                        <th>Buy Now</th>
                                        <th class="text-nowrap">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each this.list}}
                                    <tr>
                                        <td>{{id}}</td>
                                        <td>{{name}}</td>
                                        <td>
                                            <img src="/images/product/{{id}}/1.jpg" height="60px">
                                            <img src="/images/product/{{id}}/2.jpg" height="60px">
                                            <img src="/images/product/{{id}}/3.jpg" height="60px">
                                        </td>
                                        <td> {{this.seller.name}}</td>
                                        <td>{{price_start}}</td>
                                        <td>{{price_end}}</td>
                                        <td>{{step}}</td>
                                        <td>{{buy_now}}</td>
                                        <td class="text-nowrap">
                                            <a href="/product/{{this.id}}" data-toggle="tooltip" data-original-title="View"> <i class="fa fa-eye text-inverse"></i> </a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <nav aria-label="" class="mt-3">
                            <ul class="pagination">
                                <li class="{{#if not_prev}}disabled{{/if}}">
                                <a class="page-link text-dark" href="?page={{prev_value}}" tabindex="-1" aria-disabled="true">Previous</a>
                                </li>
                                {{#each this.page_numbers}}
                                {{#if isCurrentPage}}
                                    <li class="active" aria-current="page">
                                        <a class="page-link text dark" href="javascript:;">{{value}} <span class="sr-only">(current)</span></a>
                                    </li>
                                {{else}}
                                    <li>
                                        <a class="page-link text-dark" href="?page={{value}}">{{value}}</a>
                                    </li>
                                {{/if}}
                                {{/each}}
                                <li class="{{#if not_next}}disabled{{/if}}">
                                <a class="page-link text-dark" href="?page={{next_value}}">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Page wrapper  -->
    <!-- ============================================================== -->
</div>