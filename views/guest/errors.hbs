<div class="container my-5">
    <h3 class="text-center">Có gì đó sai sai!</h3>
    <h3 class="text-center">Đang chuyển hường về Trang chủ trong:</h3>
    <h1 class="text-center" id="count-down-redirect">5</h1>
</div>
{{#section 'footer'}}
<script>
    var d = setInterval(()=>{
    var c = $('#count-down-redirect').text();
    c = parseInt(c);
    $('#count-down-redirect').text(''+(c-1));
    if(c==1) {
        clearInterval(d);
        location.assign('/');
    }
    },1000);
</script>
{{/section}}