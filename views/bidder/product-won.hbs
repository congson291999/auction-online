{{!-- modal --}}
<div class="modal fade" id="mywonModal">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Feedback</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
          <form action="./feedback" method="POST">
                <div class="form-group">
                    <label for="message">Message</label>
                    <input type="text" name="message" id="message" class="form-control" placeholder="Enter message" required>
                </div>
                <div class="form-group">
                    <label for="rating">Rating</label> <br>
                    <input type="radio" name="rating" value="1" checked> Like
                    <input type="radio" name="rating" value="0"> Dislike
                </div>
                <div class="form-group">
                    {{!-- <label for="message">Product Id</label> --}}
                    <input style="display: none" type="number" name="pro" id="pro" class="form-control" value="1">
                </div>
                <div class="form-group">
                    {{!-- <label for="message">Bidder Id</label> --}}
                    <input style="display: none" type="number" name="sel" id="sel" class="form-control" value="1">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success" id="submit">Send</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
          </form>
        </div>
        <!-- Modal footer -->

        
      </div>
    </div>
</div>

<script>
    $('#my-wonmodal').on('click', function() {
        console.log("cam hia baby");
        var tr =$(this).parents('tr').first();
        var child= tr.children();
        var product=parseInt(child[1].innerHTML);
        var seller=parseInt(child[0].innerHTML);
        console.log(product);
        console.log(seller);
        $(".modal-body #pro").val(product);
        $(".modal-body #sel").val(sel);
        $("#mywonModal").modal('show');
    });
</script>
<script>
    $('.view').on("click", function(){
        var tr =$(this).parents('tr').first();
        var child= tr.children();
        var id=parseInt(child[1].innerHTML);
        console.log(id);
        window.location.assign('/bidder/product/'+id);
    })
</script>